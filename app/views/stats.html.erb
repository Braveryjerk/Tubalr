<section>
  <h2>
    overall stats
  </h2>
  <table id="general">
    <tbody>
      <% @overall_stats.each do | stat | %>
        <tr>
          <td><%= stat[0] %></td><td><%= number_with_delimiter(stat[1], :delimiter => ',') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <h2>
    past 7 days
  </h2>
  <table id="general">
    <tbody>
      <% @past_7_days_stats.each do | stat | %>
        <tr>
          <td><%= stat[0] %></td><td><%= number_with_delimiter(stat[1], :delimiter => ',') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
    
  <h2>
    today
  </h2>
  <table id="general">
    <tbody>
      <% @today_stats.each do | stat | %>
        <tr>
          <td><%= stat[0] %></td><td><%= number_with_delimiter(stat[1], :delimiter => ',') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>  
</section>