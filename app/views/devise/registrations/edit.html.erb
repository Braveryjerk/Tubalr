<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do | f | %>
  <div>
    <%= f.label :username %><br />
    <%= f.text_field :username %> <%= "<span class='error'>#{resource.errors[:username][0]}</span>".html_safe if resource.errors[:username][0] %>
  </div>

  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email %> <%= "<span class='error'>#{resource.errors[:email][0]}</span>".html_safe if resource.errors[:email][0] %>
  </div>

  <div>
    <%= f.label :music_tastes %> <br />
    <i>this helps others discover your tubalr favorites</i><br />
    <%= f.text_area :music_tastes %> <%= "<span class='error'>#{resource.errors[:music_tastes][0]}</span>".html_safe if resource.errors[:music_tastes][0] %>
  </div>

  <div>
    <%= f.label :password %><br />
    <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password %> <%= "<span class='error'>#{resource.errors[:password][0]}</span>".html_safe if resource.errors[:password][0] %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %> <%= "<span class='error'>#{resource.errors[:password_confirmation][0]}</span>".html_safe if resource.errors[:password_confirmation][0] %>
  </div>

  <div>
    <%= f.label :current_password %><br />
    <i>(needed to confirm your changes)</i><br />
    <%= f.password_field :current_password %> <%= "<span class='error'>#{resource.errors[:current_password][0]}</span>".html_safe if resource.errors[:current_password][0] %>
  </div>

  <div><%= f.submit "Update" %></div>
<% end %>

<section id="import-youtube-favorites">
  <h2>Import YouTube Favorites</h2>

  <p>
    To import your YouTube favorites or a friend's YouTube favorites, simply enter their YouTube username below! Keep in mind this will only add videos not already in your Tubalr favorites.
  </p>

  <div>
    <label>YouTube Username</label>
    <input type="text" id="youtube_username" /> <span class='error'>Woops, something went wrong, try again!</span> <span class='success'>Great Success!</span> <br/>
    <input type="button" id="import-favorites" value="Import" />
  </div>
</section>