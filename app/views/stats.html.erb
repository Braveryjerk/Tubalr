<section id="stats-main">
  <h2>
    Overall Stats
  </h2>
  <table id="general">
    <thead>
      <tr>
        <% @overall_stats.each do | stat | %>
          <td><%= stat[0] %></td>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @overall_stats.each do | stat | %>
          <td><%= number_with_delimiter(stat[1], :delimiter => ',') %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
  
  <h2>
    Past 7 Days
  </h2>
  <table id="general">
    <thead>
      <tr>
        <% @past_7_days_stats.each do | stat | %>
          <td><%= stat[0] %></td>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @past_7_days_stats.each do | stat | %>
          <td><%= number_with_delimiter(stat[1], :delimiter => ',') %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
    
  <h2>
    Today
  </h2>
  <table id="general">
    <thead>
      <tr>
        <% @today_stats.each do | stat | %>
          <td><%= stat[0] %></td>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @today_stats.each do | stat | %>
          <td><%= number_with_delimiter(stat[1], :delimiter => ',') %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
    
  <h2>
    Most Recent Search History
  </h2>
  <table>
    <thead>
      <tr>
        <td>Artist/Band</td>
        <td>Search Type</td>
        <td>When</td>
      </tr>
    </thead>
    <tbody>
      <% @recent_searches.each do | search | %>
        <tr url="<%= search[:url] %>">
          <td><%= search[:what] %></td>
          <td><%= search[:type] %></td>
          <td><%= time_ago_in_words(search[:date]) %> ago</td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <h2>
    Recent User Favorites
  </h2>
  <table>
    <thead>
      <tr>
        <td>Artist/Band</td>
        <td>When</td>
      </tr>
    </thead>
    <tbody>
      <% @recent_favorites.each do | favorite | %>
        <tr url="<%= favorite[:url] %>">
          <td><%= favorite[:who] + " favorited " + favorite[:what] %></td>
          <td><%= time_ago_in_words(favorite[:date]) %> ago</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>